# BuildPrompt AI Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# xAI Grok API Configuration
# ===========================================
# Get your API key from https://console.x.ai
XAI_API_KEY=your_xai_api_key_here
XAI_API_BASE_URL=https://api.x.ai/v1

# ===========================================
# Clerk Authentication
# ===========================================
# Get your keys from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# ===========================================
# Supabase Database
# ===========================================
# Get your keys from https://supabase.com/dashboard
NEXT_PUBLIC_SUPABASE_URL=https://xxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyxxxxx
SUPABASE_SERVICE_ROLE_KEY=eyxxxxx

# ===========================================
# Stripe Monetization
# ===========================================
# Get your keys from https://dashboard.stripe.com
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Stripe Price IDs
STRIPE_PRO_MONTHLY_PRICE_ID=price_xxxxx
STRIPE_PRO_YEARLY_PRICE_ID=price_xxxxx
STRIPE_ENTERPRISE_PRICE_ID=price_xxxxx

# ===========================================
# Application Settings
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Free tier limits
FREE_TIER_MONTHLY_BUILDS=5
PRO_TIER_MONTHLY_BUILDS=100

# ===========================================
# Analytics & Error Tracking (Optional)
# ===========================================
# PostHog - https://posthog.com
NEXT_PUBLIC_POSTHOG_KEY=phc_xxxxx
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry - https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ===========================================
# Vercel Deployment (for CI/CD)
# ===========================================
VERCEL_ORG_ID=team_xxxxx
VERCEL_PROJECT_ID=prj_xxxxx
